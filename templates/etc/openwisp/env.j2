# {{ ansible_managed }}
# source: https://github.com/openwisp/docker-openwisp/blob/master/.env
# see also: https://github.com/openwisp/docker-openwisp/blob/master/images/openwisp_base/Dockerfile

# These are just basic options, more settings are available in the
# documentation: https://github.com/openwisp/docker-openwisp/blob/master/docs/ENV.md

# Essential
DASHBOARD_DOMAIN={{ OPENWISP.settings.domain }}
API_DOMAIN={{ OPENWISP.settings.domain_api }}
RADIUS_DOMAIN={{ OPENWISP.settings.domain }}
VPN_DOMAIN={{ OPENWISP.settings.domain }}
EMAIL_DJANGO_DEFAULT={{ OPENWISP.settings.email }}
DASHBOARD_APP_PORT=8000
API_APP_PORT=8001
WEBSOCKET_APP_PORT=8002
DB_HOST=postgres
DB_USER=admin
DB_PASS={{ OPENWISP.secrets.db }}
INFLUXDB_HOST=influxdb
INFLUXDB_USER=admin
INFLUXDB_PASS={{ OPENWISP.secrets.db }}
REDIS_HOST=redis
# Security
DJANGO_SECRET_KEY={{ OPENWISP.secrets.django }}
NGINX_ADMIN_ALLOW_NETWORK=all
NGINX_HTTPS_ALLOWED_IPS=all
NGINX_HTTP_ALLOW=True
# Enable Modules
USE_OPENWISP_RADIUS=False
USE_OPENWISP_TOPOLOGY=False
USE_OPENWISP_FIRMWARE=True
USE_OPENWISP_MONITORING=True
# uWSGI
UWSGI_PROCESSES=2
UWSGI_THREADS=2
UWSGI_LISTEN=100
# Additional
SSL_CERT_MODE=SelfSigned
TZ=Europe/Vienna
CERT_ADMIN_EMAIL=example@example.org
DJANGO_LANGUAGE_CODE=en-gb
DB_NAME=openwisp
INFLUXDB_NAME=openwisp
OPENWISP_GEOCODING_CHECK=True
# X509 default CA & Certs Information
X509_NAME_CA=default
X509_NAME_CERT=default
X509_COUNTRY_CODE=AT
X509_STATE=Styria
X509_CITY=Paldau
X509_ORGANIZATION_NAME=niceshops GmbH
X509_ORGANIZATION_UNIT_NAME=IT
X509_EMAIL=infra@niceshops.com
X509_COMMON_NAME=niceshops - WLAN Controller
# VPN
VPN_NAME=default
VPN_CLIENT_NAME=default-management-vpn
# Developer
DEBUG_MODE=False
DJANGO_LOG_LEVEL=INFO
# Celery workers
USE_OPENWISP_CELERY_TASK_ROUTES_DEFAULTS=True
OPENWISP_CELERY_COMMAND_FLAGS=--concurrency=1
USE_OPENWISP_CELERY_NETWORK=True
OPENWISP_CELERY_NETWORK_COMMAND_FLAGS=--concurrency=1
USE_OPENWISP_CELERY_MONITORING=True
OPENWISP_CELERY_MONITORING_COMMAND_FLAGS=--concurrency=1
OPENWISP_CELERY_MONITORING_CHECKS_COMMAND_FLAGS=--concurrency=1
USE_OPENWISP_CELERY_FIRMWARE=True
OPENWISP_CELERY_FIRMWARE_COMMAND_FLAGS=--concurrency=1
# Metric collection
METRIC_COLLECTION=False
